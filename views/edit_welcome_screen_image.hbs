<div class="container">
    <img id="current_image_with_nav" src="/images/cinq_background_without_logo.png"/>
    <div id="new_welcome_screen_form" class="row centered-form">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Edit Welcome Screen</h3>
                </div>
                <div class="panel-body">
                    <form id="upload_form">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group" style="float: left">
                                    {{#if isDefaultImage}}
                                        <label for="defaultImage" style="float: right">&nbsp Default image as Welcome Screen</label>
                                        <input type="checkbox" style="float: right" name="defaultImage" id="defaultImage" checked>
                                    {{else}}
                                        <label for="defaultImage" style="float: right">&nbsp Default image as Welcome Screen</label>
                                        <input type="checkbox" style="float: right" name="defaultImage" id="defaultImage">
                                    {{/if}}
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group" style="float: left">
                                    {{#if isEnabled}}
                                        <label for="isEnable" style="float: right">&nbsp This Welcome Screen is enabled</label>
                                        <input type="checkbox" style="float: right" name="isEnable" id="isEnable" checked>
                                    {{else}}
                                        <label for="isEnable" style="float: right">&nbsp This Welcome Screen is disabled</label>
                                        <input type="checkbox" style="float: right" name="isEnable" id="isEnable">
                                    {{/if}}
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-12">
                                <div class="form-group">
                                    <label for="image">Current image: {{screenImage.defaultImageName}}</label>
                                    <br/>
                                    <label for="image">Choose a new image</label>
                                    {{#if isDefaultImage}}
                                        <input type="file" name="image" id="image" class="form-control input-sm" placeholder="Image" disabled>
                                    {{else}}
                                        <input type="file" name="image" id="image" class="form-control input-sm" placeholder="Image">
                                    {{/if}}
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-12">
                                <div class="form-group">
                                    <label for="company">Company name</label>
                                    <input type="text" name="company" id="company" class="form-control input-sm" placeholder="Company" value="{{screenImage.company}}">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="guest1" id="guest1" class="form-control input-sm" placeholder="First guest" value="{{screenImage.guestsNames.[0]}}">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="guest2" id="guest2" class="form-control input-sm" placeholder="Second guest" value="{{screenImage.guestsNames.[1]}}">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="guest3" id="guest3" class="form-control input-sm" placeholder="Third guest" value="{{screenImage.guestsNames.[2]}}">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="guest4" id="guest4" class="form-control input-sm" placeholder="Fourth guest" value="{{screenImage.guestsNames.[3]}}">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="guest5" id="guest5" class="form-control input-sm" placeholder="Fifth guest" value="{{screenImage.guestsNames.[4]}}">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="guest6" id="guest6" class="form-control input-sm" placeholder="Sixth guest" value="{{screenImage.guestsNames.[5]}}">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="guest7" id="guest7" class="form-control input-sm" placeholder="Seventh guest" value="{{screenImage.guestsNames.[6]}}">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="guest8" id="guest8" class="form-control input-sm" placeholder="Eighth guest" value="{{screenImage.guestsNames.[7]}}">
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="Upload and create" class="btn btn-info col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#defaultImage').change(function() {
        if ($(this).is(':checked')) {
            $('#image').prop('disabled', true);
        } else {
            $('#image').prop('disabled', false);
        }
    })

    $('#upload_form').submit(function(e) {
        e.preventDefault();

        var formData = new FormData($(this)[0]);
        
        $.ajax({
            url: '/api/new_welcome_screen_image',
            type: 'POST',
            data: formData,
            async: false,
            contentType: false,
            cache: false,
            enctype: 'multipart/form-data',
            processData: false,
            success: (data) => {
                alert('Image uploaded successfully!');
                window.location.href = "welcome_screens_list"
            },
            error: () => {
                alert('An issue has occurred!');
            }
        });
    })
</script>