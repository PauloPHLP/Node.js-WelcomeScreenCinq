<div class="container">
  <img class="current_image_vp" src="/images/cinq_background_without_logo.png"/>
  <div class="loader-wrapper">
    <span class="loader">
      <span class="loader-inner"></span>
    </span>
  </div>
  <div id="new_welcome_screen_form" class="row centered-form">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Edit visitor page</h3>
        </div>
        <div class="panel-body">
          <form id="update_form">
            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group flt_left">
                  {{#if isDefaultImage}}
                    <label for="defaultImage" class="flt_right releway-font" data-toggle="tooltip" data-placement="right" title="Once selected the default image will be used">&nbsp Default image as Welcome Screen</label>
                    <input type="checkbox" name="defaultImage" id="defaultImage" checked>
                  {{else}}
                    <label for="defaultImage" class="flt_right releway-font" data-toggle="tooltip" data-placement="right" title="Once selected the default image will be used">&nbsp Default image as Welcome Screen</label>
                    <input type="checkbox" name="defaultImage" id="defaultImage">
                  {{/if}}
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <label id="isEnableLabel" for="isEnable" class="flt_right releway-font" data-toggle="tooltip" data-placement="bottom" title="Enable/disable visitor page"></label>
                  <input type="checkbox" class="flt_right_av" name="isEnable" id="isEnable">
                </div>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="form-group">
                  <label for="image" id="currentImage" class="releway-font"><label class="releway-font-sub">Current image:</label> {{screenImage.defaultImageName}}</label>
                  <label id="imageName" class="vsb_hidden">{{screenImage.imageName}}</label>
                  <br/>
                  <label for="image" class="releway-font-sub">Choose a new image</label>
                    <div class="input-group mb-3">
                      <div class="custom-file">
                        {{#if isDefaultImage}}
                          <input type="file" class="custom-file-input releway-font" name="image" id="image" value="{{screenImage.imageName}}" name="image" id="image" accept=".gif, .png, .jpeg, .jpg" onchange="validateImageFileType(true)" disabled data-toggle="tooltip" data-placement="bottom" title="Select image">
                        {{else}}
                          <input type="file" class="custom-file-input releway-font" name="image" id="image" name="image" id="image" accept=".gif, .png, .jpeg, .jpg" onchange="validateImageFileType(true)" data-toggle="tooltip" data-placement="bottom" title="Select image">
                        {{/if}}
                        <label class="custom-file-label" for="video">Choose file</label>
                      </div>
                    </div>
                </div>
              </div>
              {{#checkIsProgrammed screenImage}}
              {{/checkIsProgrammed}} 
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <label for="company" class="releway-font-sub">First company name</label>
                  <input type="text" name="company1" id="company1" class="form-control input-sm releway-font" placeholder="Company 1" value="{{screenImage.companies.[0]}}" maxlength="20" data-toggle="tooltip" data-placement="bottom" title="First company name">
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <label for="company" class="releway-font-sub">Second company name</label>
                  <input type="text" name="company2" id="company2" class="form-control input-sm releway-font" placeholder="Company 2" value="{{screenImage.companies.[1]}}" maxlength="20" data-toggle="tooltip" data-placement="bottom" title="Second company name">
                </div>
              </div>
              <label for="company" class="releway-font-sub col-12 text-center">Guests names</label>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <input type="text" name="guest1" id="guest1" class="form-control input-sm releway-font" placeholder="Guest name" value="{{screenImage.guestsNames.[0]}}" maxlength="18" data-toggle="tooltip" data-placement="bottom" title="Guest name here">
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <input type="text" name="guest2" id="guest2" class="form-control input-sm releway-font" placeholder="Guest name" value="{{screenImage.guestsNames.[1]}}" maxlength="18" data-toggle="tooltip" data-placement="bottom" title="Guest name here">
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <input type="text" name="guest3" id="guest3" class="form-control input-sm releway-font" placeholder="Guest name" value="{{screenImage.guestsNames.[2]}}" maxlength="18" data-toggle="tooltip" data-placement="bottom" title="Guest name here">
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <input type="text" name="guest4" id="guest4" class="form-control input-sm releway-font" placeholder="Guest name" value="{{screenImage.guestsNames.[3]}}" maxlength="18" data-toggle="tooltip" data-placement="bottom" title="Guest name here">
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <input type="text" name="guest5" id="guest5" class="form-control input-sm releway-font" placeholder="Guest name" value="{{screenImage.guestsNames.[4]}}" maxlength="18" data-toggle="tooltip" data-placement="bottom" title="Guest name here">
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <input type="text" name="guest6" id="guest6" class="form-control input-sm releway-font" placeholder="Guest name" value="{{screenImage.guestsNames.[5]}}" maxlength="18" data-toggle="tooltip" data-placement="bottom" title="Guest name here">
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <input type="text" name="guest7" id="guest7" class="form-control input-sm releway-font" placeholder="Guest name" value="{{screenImage.guestsNames.[6]}}" maxlength="18" data-toggle="tooltip" data-placement="bottom" title="Guest name here">
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <input type="text" name="guest8" id="guest8" class="form-control input-sm releway-font" placeholder="Guest name" value="{{screenImage.guestsNames.[7]}}" maxlength="18" data-toggle="tooltip" data-placement="bottom" title="Guest name here">
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-around">
              <button type="button" class="btn btn-danger btn-upload col-5 releway-font" onclick="DeleteImage('{{screenImage.id}}');" data-toggle="tooltip" data-placement="bottom" title="Delete visitor page">Delete this Visitor Page &nbsp<i class="material-icons">delete</i>
              <button type="submit" class="btn btn-default btn-upload col-5 releway-font" data-toggle="tooltip" data-placement="bottom" title="Update visitor page">Update Visitor Page&nbsp<i class="material-icons">update</i>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const Toast = Swal.mixin({
    toast: true,
    position: 'top',
    showConfirmButton: false,
    timer: 3000,
  });
  const socket = io();
  const actualDate = new Date();
  const dateNow = GetTodaysDatePlusOne(actualDate);
  const dateTomorrow = GetTomorrowsDate(actualDate);
  const initialStartDate = `{{screenImage.startDate}}`;
  const initialEndDate = `{{screenImage.endDate}}`;
  const compareDate = FormatDate(initialStartDate) <= FormatDate(new Date());
  let dateStart = initialStartDate;
  let dateEnd = initialEndDate;
  let startDateFormatted = initialStartDate;
  let expirationDateFormatted = initialEndDate;
  let oldTitle = $('#title').val();
  let currentVideo = $('#currentVideo').text();
  let formatedDate = FormatDateBeauty(dateNow);
  let expirationDate = FormatDateBeauty(dateTomorrow);
  let oldCompany = $('#company1').val();
  let currentImage = $('#currentImage').text();

  $(document).ready(() => {
    if (`{{isEnabled}}` === 'programmed') {
      CheckBoxCheck('programmed', initialStartDate, initialEndDate);
    } else if (`{{{isEnabled}}}` === 'true' && compareDate === false) {
      CheckBoxCheck('true', initialStartDate, initialEndDate);
    } else if (`{{{isEnabled}}}` === 'false') {
      CheckBoxCheck('false', initialStartDate, initialEndDate);
    } else if (`{{{isEnabled}}}` === 'true' && compareDate === true) {
      CheckBoxCheck('activated', initialStartDate, initialEndDate);
    }
  });

  $("#company1").on("paste keyup change focusout", function() {
    AddAndRemoveClassConditional("#company1", "is-invalid", "is-valid");
  });

  $("#startDate").on("paste keyup change focusout", function() {
    AddAndRemoveClassConditional("#startDate", "is-invalid", "is-valid");
  });

  $("#endDate").on("paste keyup change focusout", function() {
    AddAndRemoveClassConditional("#endDate", "is-invalid", "is-valid");
  });

  $('#isEnable').change(function() {
    ChangeCheckBoxLabelText("#isEnableLabel", $(this).is(':checked'));
  });

  $('#currentImage').change(function() {
    currentImage = $('#currentImage').text();
  });

  $('#defaultImage').change(function() {
    if ($(this).is(':checked')) {
      $('#image').prop('disabled', true);
      $('#currentImage').text('Current image: default_image.jpg');
    } else {
      $('#image').prop('disabled', false);
      $('#currentImage').text(currentImage);
    }
  });

  $('#isEnable').change(function() {
    if ($(this).is(':checked')) {
      $('#isEnableLabel').text('\u00A0 This Welcome Screen is enabled');
    } else {
      $('#isEnableLabel').text('\u00A0 This Welcome Screen is disabled');
    }
  });

  $("#startScheduleWs").on("change", function() {
    if ($(this).is(':checked')) {
      EnableDisableScheduled('programmed');
    } else {
      EnableDisableScheduled('disabled');
      $("#startDate").val('');
      $("#endDate").val('');
    }
  });

  $("#isEnable").on("change", function() {
    if ($(this).is(':checked')) {
      EnableDisableScheduled('disabled');
    } else {
      EnableDisableScheduled('enabled');
    }
  });

  $('#startDate').datepicker({
    dateTimeSeparator: " - ",
    clearButton: true,
    minDate: dateNow,
    minHours: dateNow,
    onSelect: function(fd, d, picker) {
      dateStart = d;
      monthStart = GetCorrectMonth(d);
      yearStart = FormatYear(d);
      startDate = FormatDateToEnroll(d, monthStart, yearStart);
      startDateFormatted = d;
      CheckTime();
      if (dateEnd == '')
        AddAndRemoveClassSimple('#endDate', 'is-invalid', 'is-valid');
    }
  });

  $('#endDate').datepicker({
    dateTimeSeparator: " - ",
    clearButton: true,
    minDate: dateTomorrow,
    minHours: dateTomorrow,
    onSelect: function(fd, d, picker) {
      dateEnd = d;
      monthFinish = GetCorrectMonth(d);
      yearFinish = FormatYear(d);
      finishDate = FormatDateToEnroll(d, monthFinish, yearFinish);
      expirationDateFormatted = d;
      CheckTime();
      if (dateStart == '')
        AddAndRemoveClassSimple('#startDate', 'is-invalid', 'is-valid');
    }
  });

  $('#update_form').submit(function(e) {
    e.preventDefault();
    const defaultText = 'Current image: default_image.jpg';
    const imageEmpty = $('#image').get(0).files.length;
    const isDefaultImage = $('#defaultImage').is(':checked');
    const newImage = currentImage !== defaultText && imageEmpty !== 0;
    const companyEmptyOrNull = $('#company1').val() !== '' && $('#company1').val() !== ' ';
    const defaultImage = currentImage === defaultText && imageEmpty !== 0;
    const notDefaultImage = currentImage !== defaultText && imageEmpty === 0;
    const isScheduled = $("#startScheduleWs").is(':checked');
    const startDateEmptyOrNull = $("#startDate").val() !== '' && $("#startDate").val() !== ' ';
    const startDateInvalid = $("#startDate").val() === '' || $("#startDate").val() === ' ';
    const endDateEmptyOrNull = $("#endDate").val() !== '' && $("#endDate").val() !== ' ';
    const endDateInvalid = $("#endDate").val() === '' || $("#endDate").val() === ' ';
    const scheduledTime = isScheduled && startDateEmptyOrNull;
    const scheduledTimeFinish = isScheduled && endDateEmptyOrNull;
    const startTimeEmpty = isScheduled && startDateInvalid;
    const finishTimeEmpty = isScheduled && endDateInvalid;
    const dateTime = CheckTime();
    const fileTypeOk = validateImageFileType();
    const imageNameTxt = $("#imageName").val();
    const onlyCompanyToCheck = companyEmptyOrNull && isDefaultImage && imageEmpty === 0 && !isScheduled;
    const companyAndNotDefault = companyEmptyOrNull && !isDefaultImage && imageEmpty !== 0 && !isScheduled;
    const companyAndNotDefaultSame = companyEmptyOrNull && notDefaultImage && !isScheduled;
    const scheduledSettings = companyEmptyOrNull && scheduledTime && scheduledTimeFinish && dateTime && isDefaultImage && imageEmpty === 0;
    const scheduledAndNotDefault = companyEmptyOrNull && scheduledTime && scheduledTimeFinish && dateTime && !isDefaultImage && imageEmpty !== 0;
    const scheduledAndNotDefaultSame = companyEmptyOrNull && scheduledTime && scheduledTimeFinish && dateTime && notDefaultImage;
    const conditionsToEnroll = (onlyCompanyToCheck || scheduledSettings || companyAndNotDefault || companyAndNotDefaultSame || scheduledAndNotDefault || scheduledAndNotDefaultSame) && fileTypeOk;

    if (conditionsToEnroll) {
      $("#company1").addClass('is-valid');

      if (!isDefaultImage && imageEmpty !== 0)
        AddAndRemoveClassSimple('#image', 'is-valid', 'is-invalid');
      if (imageEmpty === 0 && imageNameTxt !== 'default_image.jpg' && !isDefaultImage)
        AddAndRemoveClassSimple('#image', 'is-valid', 'is-invalid');
      if (!startTimeEmpty && dateTime)
        AddAndRemoveClassSimple('#startDate', 'is-valid', 'is-invalid');
      if (!finishTimeEmpty && dateTime)
        AddAndRemoveClassSimple('#endDate', 'is-valid', 'is-invalid');

      const schedule = CheckSchedule(isScheduled);
      const imageName = $('#imageName').text();
      var formData = new FormData($(this)[0]);
      
      $.ajax({
        url: `/api/update_welcome_screen_image/{{{screenImage._id}}}/${imageName}/${currentImage.slice(15)}/${schedule}`,
        type: 'PUT',
        data: formData,
        async: false,
        contentType: false,
        cache: false,
        enctype: 'multipart/form-data',
        processData: false,
        success: data => {
          socket.emit('UpdateOnDatabase');
          
          Swal.fire({
            title: 'Success',
            text: 'Welcome Screen updated successfully!',
            type: 'success',
            confirmButtonText: 'OK, keep going!',
            confirmButtonColor: '#EE9658'
          }).then(result => {
            window.location.href = "/welcome_screens_list"
          });
        },
        error: () => {
          Swal.fire({
            title: 'Sorry',
            text: 'An issue has occurred :(',
            type: 'error',
            confirmButtonColor: '#EE9658'
          });
        }
      });
    } else {
      if (!companyEmptyOrNull) 
        AddAndRemoveClassSimple('#company1', 'is-invalid', 'is-valid');
      if (companyEmptyOrNull) 
        AddAndRemoveClassSimple('#company1', 'is-valid', 'is-invalid');
      if (!isDefaultImage && imageEmpty === 0)
        AddAndRemoveClassSimple('#image', 'is-invalid', 'is-valid');
      if (startTimeEmpty) {
        AddAndRemoveClassSimple('#startDate', 'is-invalid', 'is-valid');
        $("#image").removeClass('is-invalid');
      }
      if (finishTimeEmpty) {
        AddAndRemoveClassSimple('#endDate', 'is-invalid', 'is-valid');
        $("#image").removeClass('is-invalid');
      }
      if (!dateTime && isScheduled) {
        AddAndRemoveClassSimple('#startDate', 'is-invalid', 'is-valid');
        AddAndRemoveClassSimple('#endDate', 'is-invalid', 'is-valid');
        $("#image").removeClass('is-invalid');
      }

      Swal.fire({
        title: 'Attention',
        text: 'Please check the fields!',
        type: 'warning',
        confirmButtonColor: '#EE9658'
      });
    }
  });
</script>